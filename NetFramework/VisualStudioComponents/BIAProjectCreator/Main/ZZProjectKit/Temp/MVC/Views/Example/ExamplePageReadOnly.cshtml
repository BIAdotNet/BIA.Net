@model $companyName$.$saferootprojectname$.Business.DTO.SiteDTO

@{
    ViewBag.Title = AppliResources.ExamplePage;
}
<h2>@ViewBag.Title</h2>



<div class="row">
    <div class="col-sm-12" style="color:green" id="Message">
        ReadOnly ................................
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label class="bmd-label-floating">TextBox1</label>
            <input class="form-control" type="text" disabled="disabled" value="Value" />
        </div>
    </div>
    <div class="col-lg-4">
        <div class="form-group">
            <label class="bmd-label-floating">CheckBox</label>
            <div class="field">
                <div class="form-control" readonly>
                    @Html.CheckBox("chk1") @TextResources.Yes
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="bmd-label-floating">Date</label>
            <input class="form-control calendarPicker" type="text" disabled="disabled" />
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="bmd-label-floating">DropDownList1</label>
            <select class="form-control" disabled="disabled">
                <option></option>
                <option>Item1</option>
                <option selected="selected">Item2</option>
                <option>Item3</option>
                <option>Item4</option>
            </select>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="bmd-label-floating">TextBox3</label>
            <input class="form-control" type="text" disabled="disabled" />
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="bmd-label-floating">DropDownList2</label>
            <select class="form-control" disabled="disabled">
                <option value="No">@TextResources.Yes</option>
                <option value="Yes">@TextResources.No</option>
            </select>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="bmd-label-floating">Multiselect</label>
            <div>
                @Html.MultiselectFor(model => model.MembersIds, (IEnumerable<SelectListItem>)ViewBag.MembersIds, new { @class = "form-control", @readonly = "" }) @*multiselect dropdown-toggle btn btn-default*@
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="bmd-label-floating">Text area</label>
            <textarea class="form-control" rows="5" disabled="disabled"></textarea>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="bmd-label-floating">MultiSelect2Lists</label>
            <div>
                @Html.Multiselect2ListsFor(model => model.Members, (IEnumerable<SelectListItem>)ViewBag.MembersIds, new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col dt-buttons-group">
        <button type="button" class="btn btn-main float-right">@TextResources.Button</button>
    </div>
</div>

@section Buttons {
    <div class="btn-action-container">
        <div class="btn-action">
            <button type="button" id="btn1" class="btn btn-second">@TextResources.Cancel</button>
        </div>
        <div class="btn-action">
            <button type="button" id="btn2" class="btn btn-main">@TextResources.Save</button>
        </div>
    </div>
}


@section Scripts {

}