@model $safeprojectname$.ViewModel.Member.MemberFilterVM

@using (Html.BeginForm("_List", "Member", FormMethod.Post, new { id = "MemberFilter", @class = "PreventDuplicateRequest form-horizontal" }))
{
    <div id="input-box">
        <div class="form-group">
            @Html.T_Label("User", htmlAttributes: new { @class = "control-label" })
            <div class="field">
                @Html.MultiselectFilter("filterMember", (IEnumerable<SelectListItem>)Model.MslMember, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.T_Label("MemberRole", htmlAttributes: new { @class = "control-label" })
            <div class="field">
                @Html.MultiselectFilter("filterMemberRole", (IEnumerable<SelectListItem>)Model.MslMemberRole, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
    </div> <!-- all datatables fields are included in the input-box div -->

    <div class="row mt-4">
        <div class="btn-action">
            <button type="button" class="btn btn-second" onclick="BIA.Net.Filter.Action.ResetFilter();">@TextResources.Reset</button>
        </div>
        <div class="btn-action">
            <button type="button" class="btn btn-main btn-filter" onclick="BIA.Net.Filter.Action.SubmitFilter('Member');">@TextResources.Filter</button>
        </div>
    </div>
}

@Html.Script(
@<script>
     BIA.Net.Filter.Action.InitAutoRefresh('Member');
</script>)