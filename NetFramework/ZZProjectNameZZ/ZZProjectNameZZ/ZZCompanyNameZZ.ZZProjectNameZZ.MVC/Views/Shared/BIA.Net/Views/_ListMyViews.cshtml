@model BIA.Net.MVC.ViewModel.View.ViewPopupVM

<ul class="nav-ul">
    @foreach (var vw in Model.ViewsICanSee)
    {
        var isCurrent = vw.IsCurrentView;
        var vwClass = isCurrent ? "currentvw" : string.Empty;
        var vwName = vw.Name;
        <li class="@vwClass">
            @if (vw.IsReference)
            {
                <a class="default-button-active fas fa-cog mt-2 pl-1" style="color:grey"></a>
            }
            <a class="vwButton pb-1" style="cursor:pointer;" onclick="BIA.Net.View.ApplyView('@(Model.TableId.ToString())','@(vw.Id.ToString())')" data-toggle="tooltip" data-placement="right" title="@vw.Description">
                @if (isCurrent)
                {
                    <b>
                        @vwName
                    </b>
                }
                else
                {
                    @vwName
                }
            </a>
            @if (vw.IsDefaultView)
            {
                <a class="default-button-active fas fa-eye mt-2 pl-1" style="color:blue !important"></a>
            }
        </li>
    }
</ul>

<script>
    $(document).ready(function () {
        BIA.Net.View.Manage.InitListMyView('@Model.TableId')
    });
</script>
