@model ZZCompanyNameZZ.ZZProjectNameZZ.MVC.ViewModel.Site.SiteAdvancedFilterVM

@using (Html.BeginForm("_List", "Site", FormMethod.Post, new { id = "SiteFilter", @class = "PreventDuplicateRequest form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="filter-box">
        <div class="form-group">
            @Html.T_Label("Title", htmlAttributes: new { @class = "control-label" })
            <div class="field">
                @Html.MultiselectFilter("filterTitle", (IEnumerable<SelectListItem>)Model.MslTitle, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.T_Label("Member", htmlAttributes: new { @class = "control-label" })
            <div class="field">
                @Html.MultiselectFilter("filterMember", (IEnumerable<SelectListItem>)Model.MslMember, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
    </div> <!-- all datatables fields are included in the input-box div -->
    <div class="row mt-4">
        <div class="btn-action">
            <button type="button" class="btn btn-second" onclick="BIA.Net.Filter.Action.ResetFilter('#SiteFilterContent','#SiteTable', BIA.Net.DataTable.LoadingType.Standard);">@TextResources.Reset</button>
        </div>
        <div class="btn-action">
            <button type="button" class="btn btn-main btn-filter" onclick="BIA.Net.DataTable.RefreshList('#SiteTable', BIA.Net.DataTable.LoadingType.Standard);">@TextResources.Filter</button>
        </div>
    </div>
}