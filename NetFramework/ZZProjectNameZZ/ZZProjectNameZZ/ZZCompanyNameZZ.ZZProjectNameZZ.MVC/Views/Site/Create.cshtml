@model ZZCompanyNameZZ.ZZProjectNameZZ.Business.DTO.SiteDTO

@{
    ViewBag.Title = TextResources.Create + " " + TextResources.Site;
}

<h2>@TextResources.Create @TextResources.Site</h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "SiteCreateForm", @class = "PreventDuplicateRequest" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "err" })
    <div class="form-group">
        @Html.T_LabelFor(model => model.Title, htmlAttributes: new { @class = "bmd-label-floating mandatory" })
        <div class="field">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger bmd-help" })
        </div>
    </div>
</div>

}

@section Buttons {
    <div class="btn-action-container">
        <div class="btn-action">
            <button type="button" onclick="location.href='@Url.Action("Index")'" class="btn btn-second">@TextResources.Cancel</button>
        </div>
        <div class="btn-action">
            <button onclick="$('#SiteCreateForm').submit();" class="btn btn-main">@TextResources.Create</button>
        </div>
    </div>
}