{
  "ConnectionStrings": {
    "BIADemoDatabase": "data source=localhost;initial catalog=BIADemo;integrated security=True;MultipleActiveResultSets=True;App=BIADemo"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System": "Warning",
      "Microsoft": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtIssuerOptions": {
    "Issuer": "BIADemoApi",
    "Audience": "http://localhost:4200"
  },
  "NLog": {
    "autoReload": true,
    "internalLogLevel": "Error",
    "internalLogFile": "${basedir}/Logs/internal-nlog.txt",
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" },
      { "assembly": "NLog.Web.AspNetCore" },
      { "assembly": "NLog.MailKit" }
    ],
    "targets": {
      "fileLog": {
        "type": "File",
        "fileName": "${basedir}/Logs/${shortdate}_MyCompany.BIADemo_Api.log",
        "archiveAboveSize": 2000000,
        "archiveNumbering": "Rolling",
        "archiveEvery": "Day",
        "layout": "${longdate}|${uppercase:${level}}|${aspnet-traceidentifier}|${message} ${exception:format=tostring}"
      },
      "mailLog": {
        "type": "Mail",
        "layout": "${longdate}|${uppercase:${level}}|${aspnet-traceidentifier}|${message} ${exception:format=tostring}",
        "addNewLines": true,
        "subject": "[BIADemo] ERROR",
        "from": "noreply-BIADemo@MyCompany.com",
        "smtpServer": "127.0.0.1",
        "to": "test@mail.com"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minlevel": "Info",
        "writeTo": "fileLog"
      }
      //{
      //  "logger": "error.mail",
      //  "minlevel": "Error",
      //  "writeTo": "mailLog"
      //}
    ]
  }
}