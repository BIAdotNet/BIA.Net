<script language="javascript">
    @{
        var currentCulture = System.Globalization.CultureInfo.CurrentCulture;
        var culture = currentCulture.Name;
        var cultureShort = culture.Split('-')[0];
        var cultureFormatDate = currentCulture.DateTimeFormat.ShortDatePattern.Replace("M", "m");
        var cultureFormatDateMoment = currentCulture.DateTimeFormat.ShortDatePattern.ToUpper();
        var cultureFormatDateTimeMoment = cultureFormatDateMoment + " " + currentCulture.DateTimeFormat.ShortTimePattern.Replace("M", "m").Replace("tt", "A");
        var cultureFormatDateTimeSecMoment = cultureFormatDateMoment + " " + currentCulture.DateTimeFormat.LongTimePattern.Replace("M", "m").Replace("tt", "A");
        var cultureFormatTimeMoment = currentCulture.DateTimeFormat.ShortTimePattern.Replace("M", "m").Replace("tt", "A");
        var cultureFormatTimeSecMoment = currentCulture.DateTimeFormat.LongTimePattern.Replace("M", "m").Replace("tt", "A");
    } 
    var culture = '@culture';
    var cultureDisplayName = '@System.Globalization.CultureInfo.CurrentCulture.DisplayName';
    BIA.Net.MVC.Localisation.cultureShort = "@cultureShort";
    BIA.Net.MVC.Localisation.cultureFormatDate = "@cultureFormatDate";
    $.fn.dataTable.moment('@cultureFormatDateMoment');
    $.fn.dataTable.moment('@cultureFormatDateTimeMoment');
    $.fn.dataTable.moment('@cultureFormatDateTimeSecMoment');
    $.fn.dataTable.moment('@cultureFormatTimeMoment');
    $.fn.dataTable.moment('@cultureFormatTimeSecMoment');
    @if (currentCulture.DateTimeFormat.AMDesignator == "a. m.") {
@:    moment.updateLocale('en', {
@:      meridiemParse: /[ap]\.? m?\.?/i
@:    });
    }
    //DataTable
    @if (cultureShort == "fr"){
        <text>
    BIA.Net.DataTable.cultureDataTable = {
        "sProcessing": "Traitement en cours...",
        "sSearch": "Rechercher&nbsp;:",
        "sLengthMenu": "Afficher _MENU_ &eacute;l&eacute;ments",
        "sInfo": "Affichage de l'&eacute;l&eacute;ment _START_ &agrave; _END_ sur _TOTAL_ &eacute;l&eacute;ments",
        "sInfoEmpty": "Affichage de l'&eacute;l&eacute;ment 0 &agrave; 0 sur 0 &eacute;l&eacute;ment",
        "sInfoFiltered": "(filtr&eacute; de _MAX_ &eacute;l&eacute;ments au total)",
        "sInfoPostFix": "",
        "sLoadingRecords": "Chargement en cours...",
        "sZeroRecords": "Aucun &eacute;l&eacute;ment &agrave; afficher",
        "sEmptyTable": "Aucune donn&eacute;e disponible dans le tableau",
        "oPaginate": {
            "sFirst": "Premier",
            "sPrevious": "Pr&eacute;c&eacute;dent",
            "sNext": "Suivant",
            "sLast": "Dernier"

        },
        "oAria": {
            "sSortAscending": ": activer pour trier la colonne par ordre croissant",
            "sSortDescending": ": activer pour trier la colonne par ordre d&eacute;croissant"

        }
    }
    </text>
    }
    else if (cultureShort == "es")
    {
        <text>
    BIA.Net.DataTable.cultureDataTable = {
        "sEmptyTable": "No hay datos disponibles en la tabla",
        "sInfo": "Mostrando de _START_ a _END_ de un total de _TOTAL_ entradas",
        "sInfoEmpty": "Mostrando de 0 a 0 de un total de 0 entradas",
        "sInfoFiltered": "(filtrado de _MAX_ entradas totales)",
        "sInfoPostFix": "",
        "sInfoThousands": ".",
        "sLengthMenu": "Mostrar _MENU_ entradas",
        "sLoadingRecords": "Cargando...",
        "sProcessing": "Procesando...",
        "sSearch": "Buscar:",
        "sZeroRecords": "No se encontraron registros coincidentes",
        "oPaginate": {
            "sFirst": "Primero",
            "sLast": "Ultimo",
            "sNext": "Siguiente",
            "sPrevious": "Anterior"

        },
        "oAria": {
            "sSortAscending": ": activar para ordenar la columna ascendente",
            "sSortDescending": ": activar para ordenar la columna descendente"

        }
    }
    </text>
    }
    else //en-US
    {
        <text>
    BIA.Net.DataTable.cultureDataTable = {
        "sEmptyTable": "No data available in table",
        "sInfo": "Showing _START_ to _END_ of _TOTAL_ entries",
        "sInfoEmpty": "Showing 0 to 0 of 0 entries",
        "sInfoFiltered": "(filtered from _MAX_ total entries)",
